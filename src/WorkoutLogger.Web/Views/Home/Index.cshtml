@{
ViewData["Title"] = "Home Page";
}

<!-- HEADER -->
<div class="container">
    <div class="row">
        <div class="col-12 col-xl-12">
            <!-- Convertions -->
            <div class="card">
                <div class="card-header">
                    <!-- Title -->
                    <h4 class="card-header-title">
                        Active Days per Month
                    </h4>
                </div>
                <div class="card-body">

                    <!-- Chart -->
                    @(Html.Kendo().Chart()
                    .Name("chart")
                    .Legend(legend => legend
                    .Position(ChartLegendPosition.Top)
                    )
                    .ChartArea(chartArea => chartArea
                    .Background("transparent")
                    )
                    .Series(series =>
                    {
                    series.Column(new int[] { 24, 27, 15, 20, 21, 30, 20, 18, 28, 14 });
                    })
                    .CategoryAxis(axis => axis
                    .Name("series-axis")
                    .Line(line => line.Visible(false))
                    )
                    .CategoryAxis(axis => axis
                    .Name("label-axis")
                    .Categories("Jun","Jul","Aug","Sep", "Oct", "Nov", "Dec", "Janv")
                    )
                    .ValueAxis(axis => axis
                    .Numeric()
                    .Labels(labels => labels.Format("{0}"))

                    // Move the label-axis all the way down the value axis
                    .AxisCrossingValue(0, int.MinValue)
                    )
                    )
                </div>
            </div>
            <div class="col-12 col-xl-12">
                <!-- Card -->
                <div class="card">
                    <div class="card-body">

                        <!-- Header -->
                        <div class="mb-3">
                            <div class="row align-items-center">
                                <div class="col-auto">

                                    <!-- Avatar -->
                                    <a href="#!" class="avatar">
                                        <img src="~/img/avatars/profiles/avatar-9.png" alt="profile picture"
                                            class="avatar-img rounded-circle">
                                    </a>

                                </div>
                                <div class="col ml-n2">

                                    <!-- Title -->
                                    <h4 class="mb-1">
                                        Rémi Jarry
                                        <span class="text-muted">
                                            set a new PR
                                        </span>
                                    </h4>
                                    <!-- Time -->
                                    <p class="card-text small text-muted">
                                        <span class="fe fe-clock"></span> <time datetime="2018-05-24">4hr ago</time>
                                    </p>

                                </div>
                                <div class="col-auto">

                                    <!-- Dropdown -->
                                    <div class="dropdown">
                                        <a href="#" class="dropdown-ellipses dropdown-toggle" role="button"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fe fe-more-vertical"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="#!" class="dropdown-item">
                                                Action
                                            </a>
                                            <a href="#!" class="dropdown-item">
                                                Another action
                                            </a>
                                            <a href="#!" class="dropdown-item">
                                                Something else here
                                            </a>
                                        </div>
                                    </div>

                                </div>
                            </div> <!-- / .row -->
                        </div>

                        <div class="card">
                            <div class="card-body">
                                <h6 class="text-uppercase text-center text-muted my-4">
                                    Fran
                                </h6>
                                <div class="row no-gutters align-items-center justify-content-center">
                                    <div class="col-auto">
                                      <div class="display-2 mb-0">6:04</div>
                                    </div>
                                    <div class="col-auto">
                                        <div class="h2 mb-0">PR</div>
                                      </div>
                                  </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="row">
                                <div class="col">

                                    <!-- Buttons -->
                                    <a href="#!" class="btn btn-sm btn-white">
                                        👍 2
                                    </a>
                                </div>
                                <div class="col-auto mr-n3">

                                </div>
                                <div class="col-auto">

                                </div>
                            </div> <!-- / .row -->
                        </div>

                        <!-- Divider -->
                    </div>
                </div>
            </div>
        </div>
    </div>