<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkoutLogger.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/fonts/feather/feather.css" />

    @*KENDO*@

    <link href="https://kendo.cdn.telerik.com/2020.1.114/styles/kendo.bootstrap-v4.min.css" rel="stylesheet" type="text/css" />
    <script src="https://kendo.cdn.telerik.com/2020.1.114/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.1.114/js/jszip.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.1.114/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.1.114/js/kendo.aspnetmvc.min.js"></script>
</head>
<body>
    <div class="header">

        <div class="container">
            <!-- Image -->
            <img src="~/img/covers/profile-cover-1.jpg" class="header-img-top" alt="...">
        </div>

        <div class="container">

            <!-- Body -->
            <div class="header-body mt-n5 mt-md-n6">
                <div class="row align-items-end">
                    <div class="col-auto">

                        <!-- Avatar -->
                        <div class="avatar avatar-xxl header-avatar-top">
                            <img src="~/img/avatars/profiles/avatar-9.png" alt="..." class="avatar-img rounded-circle border border-4 border-body">
                        </div>

                    </div>
                    <div class="col mb-3 ml-n3 ml-md-n2">

                        <!-- Pretitle -->
                        <h6 class="header-pretitle">
                            Members
                        </h6>

                        <!-- Title -->
                        <h1 class="header-title">
                            Rémi Jarry
                        </h1>

                    </div>
                </div> <!-- / .row -->
                <div class="row align-items-center">
                    <div class="col">

                        <!-- Nav -->
                        <ul class="nav nav-tabs nav-overflow header-tabs">
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="Home" class="nav-link active">
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="LogBook" class="nav-link">
                                    Logbook
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="Barbell" class="nav-link">
                                    Barbell PRs
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="Benchmark" class="nav-link">
                                    Benchmarks
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="Friends" class="nav-link">
                                    Friends
                                </a>
                            </li>
                        </ul>

                    </div>
                </div>
            </div> <!-- / .header-body -->

        </div>
    </div>
    @RenderBody()



    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
